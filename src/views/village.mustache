{{> partials/header }}

<style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
    form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
    form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
    #messages { list-style-type: none; margin: 0; padding: 0; }
    #messages li { padding: 5px 10px; }
    #messages li:nth-child(odd) { background: #eee; }
</style>
<h1 id="role"></h1>
<ul id="messages"></ul>
<form action="">
    <input id="m" autocomplete="off" /><button>Send</button>
</form>
<script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
    $(function () {
        var socket = io();
        var nick = "villager" + new Date().getDate().toString();
        var role = "viewer";
        var inProgress = false;

        socket.on('connect', function () {
            socket.emit('new connection', nick);
        });

        $('form').submit(function(e){
            e.preventDefault(); // prevents page reloading
            if ($('#m').val().startsWith("/"))
            switch ($('#m').val().substr(1,4)) {
                case "init":

                case "nick":
                    socket.emit('change nick', nick, $('#m').val().split(" ")[1]);
                    break;
                case "wolf":
                    socket.emit('wolf message', $('#m').val().substr(6,-1));
                    break;
                default:
                    alert("ERROR: Command not found.");
            }
            else socket.emit('chat message', $('#m').val());
            $('#m').val('');
            return false;
        });
        socket.on('chat message', function(msg) {
            $('#messages').append($('<li>').text(msg));
        });
        socket.on('role assignation', function(role) {
            $('#role').append(role);
        });
        socket.on('progress', function(progress) {
            inProgress = progress;
        })
    });
</script>
{{> partials/footer }}