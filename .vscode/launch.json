    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost",
            "type": "chrome",
            "runtimeExecutable": "C:\\Users\\ratio\\AppData\\Local\\Chromium\\Application\\chrome.exe",
            "request": "launch",
            "userDataDir": true,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/dist/public"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Compile and execute server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "npm: build",
            "program": "${workspaceFolder}\\dist\\server.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}